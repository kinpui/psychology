<script>
window.onload = function(){
	daText();//答字动画
	jump();
}
/*=++++++++++++++++++++++++++++++++++++=*/
/*答字旋转*/
function daText(){
	var e = document.getElementsByClassName("xlwd")[0].getElementsByTagName("li");
	for(var i = 0;l=e.length,i<l;i++){
		e[i].onmouseover = function(){
			this.getElementsByTagName("img")[0].style.transform = "rotate(360deg)";
		}
		e[i].onmouseout = function(){
			this.getElementsByTagName("img")[0].style.transform = "rotate(0deg)";
		}
	}
}
/*=++++++++++++++++++++++++++++++++++++=*/

function runFunc(Class,Height,Speed){
	var element = document.getElementsByClassName(Class);
	var logger = 0;
	var Top = 0;
	var run = setInterval(function(){
			if(logger>=Height){
				alert(element[0].style.marginTop);
				clearInterval(run);
			}
			Top -= 1;
			element[0].style.marginTop = Top+'px';
			logger+=1;
	},Speed);
}
/*=++++++++++++++++++++++++++++++++++++=*/
function jump(){
	var span = document.getElementsByClassName("dot")[0].getElementsByTagName("span");
	for(var i = 0;l=span.length,i<l;i++){
		span[i].onmouseover = function(){
			var title = 25*(this.title-1);
			var picAndP = 200*(this.title-1); 
			autoRun(picAndP,title);
		}
	}
}
function autoRun(picAndP,title,picAndPSpeed,titleSpeed){
	var picSpeed = arguments[2]?arguments[2]:1;//默认值1
	var tSpeed = arguments[3]?arguments[3]:5;//默认值5
	//alert(picSpeed+titleSpeed);
	runFunc('xlzt_longp',picAndP,picSpeed);
	runFunc('xlzt_a',title,tSpeed);
	runFunc('xlztImgBox',picAndP,picSpeed);
}
</script>

